<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlinstudy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.KotlinStudyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/splash_fullscreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.GrammarStudyActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.AuthorListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ArticleListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.DailyQuestionListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.WebPageActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.KotlinMapActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.ShowCustomActivity"
            android:screenOrientation="portrait"
            android:theme="@style/translucent"
            />

        <activity android:name=".activity.SimulateOtherActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.KaolaActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.NotificationTestActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.LineChartActivity"
            android:screenOrientation="portrait" />

        <service android:name=".service.NotificationMonitor"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            >
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
    </application>

</manifest>