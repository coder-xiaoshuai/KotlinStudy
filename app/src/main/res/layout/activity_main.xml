<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="全部分类"
        android:textColor="@color/color_text_black_33"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_kotlin_study"
                style="@style/main_button_common_style"
                android:text="kotlin语法学习" />

            <Button
                android:id="@+id/btn_api_test"
                style="@style/main_button_common_style"
                android:text="网络请求测试" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.example.kotlinstudy.view.DragFloatView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.kotlinstudy.view.ClickSpanTextView
            android:id="@+id/text_hello_world"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/shape_main_text_tip"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="学习kotlin的第一天 hello world!"
            android:textSize="20sp"
            app:clickText="hello world!"
            app:clickTextColor="@color/colorAccent" />

    </com.example.kotlinstudy.view.DragFloatView>


</androidx.constraintlayout.widget.ConstraintLayout>