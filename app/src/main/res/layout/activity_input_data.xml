<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.common_ui.views.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="录入数据" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*问题描述" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|left"
                android:hint="输入问题描述" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择问题类型" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单选" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多选" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="判断" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择问题难度" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="初级" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中级" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高级" />

            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="答案A" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="答案B" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="答案C" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="答案D" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="答案E" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="答案F" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="答案G" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="答案解析" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|left"
                android:hint="输入答案解析" />

            <Button
                android:id="@+id/btn_insert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="插入数据" />

            <Button
                android:id="@+id/btn_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查询数据" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>